<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="jp.rika.sumitomo.tonda.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/busapp3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="34dp" />


    <Button
        android:id="@+id/buttonL"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:background="@null"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/button_sa"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="17dp" />
    <Button
        android:id="@+id/buttonR"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginEnd="28dp"
        android:background="@null"
        android:layout_alignBottom="@+id/buttonL"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonL" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="186dp"
        android:layout_height="132dp"
        android:background="@null"
        android:layout_marginBottom="13dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/buttonL" />
    <Button
        android:id="@+id/button_sa"
        android:layout_width="84dp"
        android:layout_height="132dp"
        android:background="@null"
        android:layout_alignBottom="@+id/button_back"
        android:layout_alignEnd="@+id/buttonR"
        android:layout_alignTop="@+id/button_back" />


</RelativeLayout>
