<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        tools:context="jp.rika.sumitomo.tonda.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/main5"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true" />


    <Button
        android:id="@+id/buttonL"
        android:layout_width="155dp"
        android:layout_height="110dp"
        android:background="@null"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/button_back"
        android:layout_toStartOf="@+id/buttonR" />
    <Button
        android:id="@+id/buttonR"
        android:layout_width="155dp"
        android:layout_height="110dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:layout_alignTop="@+id/buttonL"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="155dp"
        android:layout_height="110dp"
        android:background="@null"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toStartOf="@+id/button_sa" />
    <Button
        android:id="@+id/button_sa"
        android:layout_width="155dp"
        android:layout_height="110dp"
        android:background="@null"
        android:layout_alignStart="@+id/buttonR"
        android:layout_alignBottom="@+id/button_back"
        android:layout_alignEnd="@+id/buttonR"
        android:layout_alignTop="@+id/button_back" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"

        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button_sa">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
